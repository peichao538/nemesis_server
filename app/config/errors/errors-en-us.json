{
	"_name":"app.conf",
	"_desc":"Nemesis Application Configuration File",
	
	"_author":"Sam Caldwell <mail@samcaldwell.net>",
	"_copyright":"(c) 2013 Sam Caldwell.  All Rights Reserved.",
	
	"language":"en-us",
	
	"_range":"0-99 are general error codes",
	
	"success":{
		"code":0,
		"text":"success",
		"fatal":false
	},
	"failure":{
		"code":1,
		"text":"failure",
		"fatal":true
	},
	"unknown":{
		"code":2,
		"text":"An unknown error has occurred in Nemesis.",
		"fatal":true
	},
	"notImplemented":{
		"code":3,
		"text":"This feature has not been implemented.",
		"fatal":false
	},
	
	"bootstrap":{
		"_range":"100-199 reserved for bootstrap",
		"invalidArgument":{
			"code":100,
			"text":"An unknown parameter was passed at the command line.",
			"fatal":true
		},
		"invalidModule":{
			"code":101,
			"text":"An invalid module was detected in the modules array (app.conf.json).",
			"fatal":true
		},
		"missingModuleFile":{
			"code":102,
			"text":"root.core.modules failed.  Module file is defined but missing.",
			"fatal":true
	},
	
	"app":{
		"main":{
			"success":{
				"code":110,
				"message":"All Services have started successfully.",
				"fatal":false
			},
			"monitorHeartbeatFailed":{
				"code":112,
				"text":"root.app.monitor.heartbeat.start() failed",
				"fatal":true
			}
			"monitorStatisticsFailed":{
				"code":113,
				"text":"root.app.monitor.statistics.start() failed",
				"fatal":true
			}
			"servicesFailed":{
				"code":114,
				"text":"root.app.start() failed to start services.",
				"fatal":true,
			}
		}
		"start":{
		}
	},
	
	
	
	"ipc":{
		"_desc":"this section is for interprocess communication errors.",
		
		invalidObject:"An invalid IPC Message Object was Encountered.",
		
		
}