	"width":60,
	
	"syslog":{
		"serverIp":"127.0.0.1",
		"serverPort":514,
		"serverProto":"tcp",
		"serverTLS":{
			"enabled":true,
			"key":"/etc/ssl/private/syslog_client.key",
			"cert":"/etc/ssl/certs/syslog_client.cert",
			"ca":"/etc/ssl/certs/syslog_server.ca.cert"
		}
	}
