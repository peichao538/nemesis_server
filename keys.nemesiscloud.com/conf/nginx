#/etc/nginx/sites-available/keys.nemesiscloud.com

#(c) 2013 Sam Caldwell.  All Rights Reserved.
#

server {
        listen   80;
        root /var/www/keys.nemesiscloud.com;
        index index.html;
        server_name keys.nemesiscloud.com;

        location / {
                include uwsgi_params;
                uwsgi_pass unix:///run/uwsgi/app/keys.nemesiscloud.com/socket;
                uwsgi_param UWSGI_SCHEME $scheme;
                uwsgi_param SERVER_SOFTWARE nginx/$nginx_version;
        }
        location /static {
                root /var/www/keys.nemesiscloud.com/static/;
                index index.html;
        }
        error_page 404 /404.html;
        error_page 500 /500.html;
        error_page 501 /501.html;
        error_page 502 /502.html;
        error_page 504 /504.html;
        location = /404.html {
                root /var/www/keys.nemesiscloud.com/error/404.html;
        }
        location = /500.html {
                root /var/www/keys.nemesiscloud.com/error/500.html;
        }
        location = /501.html {
                root /var/www/keys.nemesiscloud.com/error/501.html;
        }
        location = /502.html {
                root /var/www/keys.nemesiscloud.com/error/502.html;
        }
        location = /504.html {
                root /var/www/keys.nemesiscloud.com/error/504.html;
        }
}
